function fillData() {
	var selected = new Array();
	var product_name =$("#product_name").val();
	var product_desc =$("#product_desc").val();
	var links =$("#link").val(); 
	var linkTitle =$("#linkTitle").val();
	var RegExp = /(ftp|http|https):\/\/(\w+:{0,1}\w*@)?(\S+)(:[0-9]+)?(\/|\/([\w#!:.?+=&%@!\-\/]))?/;


	   $("input[type=checkbox]:checked").each(function() {
       selected.push($(this).val());
		});
		
		if(selected.length==0)
		{
			alert("Please check atleast one group!");
			return false;
		}
		
		else if(product_name=="" || product_name==null) {
			alert("Please fill product name!");
			$("#product_name").focus();
			return false;
			
		}
		
		else if(product_desc=="" || product_desc==null) {
			alert("Please fill product description!");
			$("#product_desc").focus();
			return false;
			
		}	
		else if(links=="") {
			alert("Please give a link!");
			$("#link").focus();
			return false;
			
		} else if(!RegExp.test(links)){
		alert("Please give a valid link!");
		return false;

		} else if($("#upload_file").val()=='') {
			alert("Please Upload file!");
			$("#upload_file").focus();
			return false;
			
		} 

		$(".custom_btn").attr("href","/orders?order%5Bamount%5D=20&amp;order%5Bdescription%5D=Post");
		
}	

function setOrder()
{
	var selected = new Array();
	 $("input[type=checkbox]:checked").each(function() {
   selected.push($(this).val());
	});
	
	var product_name =$("#product_name").val();
	var product_desc =$("#product_desc").val();
	var links =$("#link").val(); 
	var linkTitle =$("#linkTitle").val();
	$.ajax({
			url:"putCheckBox",
			data:{type:selected,productName:product_name,productDesc:product_desc,links:links,linkTitle:linkTitle},
			type:'GET',
			success:function(result){
				}
		
		});	
}

function readImage(input) {
    if ( input.files && input.files[0] ) {
        var FR= new FileReader();
        FR.onload = function(e) {
        uploadImage(e.target.result);
        };       
        FR.readAsDataURL( input.files[0] );
    }
}


function uploadImage(img)
{
$("#img_loading").show();
$("#post_btn").attr('disabled',true);
$data = img.split(',');	
$.ajax({
	url:"putImage",
	data:{data: $data[1],current_user: $("#current_user").val()},
	type:'POST',
	success:function(result){
	$("#img_loading").hide();	
	$("#post_btn").attr('disabled',false);
		}

});	
}


