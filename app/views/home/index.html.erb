%h2 Orders

%table.table
  %thead
    %tr
      %th Payment ID
      %th Amount($)
      %th Payment Status
      %th Time
      %th Description
      %th
  %tbody
    - @orders.each do |order|
      %tr
        %td= order.payment_id
        %td= order.amount
        %td= order.state
        %td= order.created_at
        %td= order.description
        %td= link_to "Details", order_path(order)
