<div class='container' id='content'>
	  <div class="row">
	    <h1>Orders</h1>
	    
	    <% if(@latestOrder.state=="approved") %>
	    
	       <div class="alert alert-success text-center">
			  Thanks You have post Successfully!
			</div>
			
		<% elsif(@latestOrder.state=="cancelled") %>
		
			 <div class="alert alert-success text-center">
			  You have cancelled order you have not post Successfully!
			</div>
		<% end %>
    
	  
      <div class="col-md-12">
      
   
      <table class='table'>
        <thead>
          <tr>
            <th>Payment ID</th>
            <th>Amount($)</th>
            <th>Payment Status</th>
            <th>Time</th>
            <th>Description</th>
            
          </tr>
        </thead>
        <tbody>
        
        <% @orders.each do |order|  %>
        
          <tr>
            <td><%=order.payment_id  %></td>
            <td><%=order.amount  %></td>
            <td><%=order.state  %></td>
            <td><%=order.created_at  %></td>
            <td><%=order.description  %></td>
           
          </tr>
          
          
          <% end %>
          
        </tbody>
      </table>
    </div>    
    
		 <div class="clearfix"></div><br/><br/>
    
    </div>   
    </div>
        
        
 
